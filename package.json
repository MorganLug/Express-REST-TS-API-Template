{
  "name": "express-rest-ts-api-template",
  "version": "1.0.0",
  "description": "A template for a REST API using express and typescript",
  "main": "app.ts",
  "scripts": {
    "start": "NODE_ENV=production node ./src/bin/www",
    "windows-start": "SET NODE_ENV=production&& node ./src/bin/www",
    "dev": "NODE_ENV=development nodemon ./src/bin/www",
    "windows-dev": "SET NODE_ENV=development&& nodemon ./src/bin/www",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "author": "Morgan Lugagne",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.38"
  }
}
