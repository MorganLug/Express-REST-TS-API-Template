{
  "name": "express-rest-ts-api-template",
  "version": "1.0.0",
  "description": "A template for a REST API using express and typescript",
  "main": "app.ts",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "tsc",
    "start": "npm run build && node ./build/index.js",
    "dev": "NODE_ENV=development npx nodemon --exec ts-node ./src/index.ts  --watch src --ext .ts",
    "windows-dev": "SET NODE_ENV=development&& npx nodemon --exec ts-node ./src/index.ts  --watch src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "author": "Morgan Lugagne",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.38"
  }
}
